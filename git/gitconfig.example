# Sample gitconfig
#

[user]
        name = AUTHORNAME
        email = AUTHOREMAIL
[credential]
        helper = GIT_CREDENTIAL_HELPER
[alias]
        co = checkout
        wtf     = !$ZSH/bin/git-wtf
        rank-contributors = !$ZSH/bin/git-rank-contributors
        l = !$ZSH/bin/git-l
        count   = !git shortlog -sn
[color]
        diff = auto
        status = auto
        branch = auto
        ui = true
[core]
        excludesfile = ~/.gitignore
[apply]
        whitespace = nowarn
[mergetool]
        keepBackup = false
[difftool]
        prompt = false
[help]
        autocorrect = 1
[pull]
        rebase = true
[push]
        # See `git help config` (search for push.default)
        # for more information on different options of the below setting.
        #
        # Setting to git 2.0 default to surpress warning message
        default = simple

[color "diff"]
        meta = blue
        frag = magenta
        old = red
        new = green
[color "branch"]
        current = green bold
        local = blue
        remote = yellow
        plain = red bold
[color "status"]
        added = green
        changed = yellow
        untracked = blue
[init]
	templatedir = ~/.git_template
